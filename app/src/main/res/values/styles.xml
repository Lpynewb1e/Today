<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- popupmenu item的分割线 -->
        <item name="android:dropDownListViewStyle">@style/diliver</item>
    </style>
    
    <style name="popupWindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popuowindow_anim</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden</item>
    </style>
</resources>

