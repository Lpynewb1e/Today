<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/me_people"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/me_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/me_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/timg"/>

            <TextView
                android:id="@+id/me_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:text="Idiot"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/me_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="50dp"
                android:text="378691904" />
        </RelativeLayout>

        <Button
            android:layout_weight="2"
            android:id="@+id/me_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/me_people"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="登录"
            android:textSize="25dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/color"
        android:layout_below="@id/me_people"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f5f5f6" />

    <LinearLayout
        android:id="@+id/me_main"
        android:layout_below="@id/color"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/me_runaway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="免跑单:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/runaway_num"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textSize="20dp" />
        </LinearLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/me_lecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="讲座单:"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/lecture_num"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/color_1"
        android:layout_below="@id/me_main"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f5f5f6"/>

    <RelativeLayout
        android:id="@+id/w"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/color_1">

        <ImageView
            android:id="@+id/take_photo"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/take"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/take"
            android:layout_toRightOf="@id/take_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我参加的"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="300dp"
            android:src="@mipmap/jiantou" />
    </RelativeLayout>

    <TextView
        android:id="@+id/color_2"
        android:layout_below="@id/w"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f5f5f6"/>

    <LinearLayout
        android:layout_below="@id/color_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/setting"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/me_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设置"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>